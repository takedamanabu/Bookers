<h1>Books</h1>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
<% @books.each do |book| %>
  <tr>
    <td>リーダブルコード</td>
    <td>より良いコードを書くためのシンプルで実践的なテクニック</td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", book_path(book) %></td>
    <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>

</tbody>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

